<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textColorPrimary">@color/md_primary_text_light</item>
        <item name="textColorSecondary">@color/md_secondary_text_light</item>
        <item name="textColorTertiary">@color/md_disabled_text_light</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless.Colored</item>
    </style>

    <style name="AppTheme.Light" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>

    <style name="AppTheme.TextAppearance.Header" parent="AppTheme.TextAppearance">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:paddingBottom">@dimen/text_margin_header</item>
    </style>

    <style name="AppTheme.TextAppearance.Header.Tight" parent="AppTheme.TextAppearance.Header">
        <item name="android:paddingBottom">@dimen/text_margin_header_tight</item>
    </style>

    <style name="AppTheme.TextAppearance.Subhead" parent="AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_subhead</item>
        <item name="android:paddingBottom">@dimen/text_margin_subhead</item>
    </style>

    <style name="AppTheme.TextAppearance.Body" parent="AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">?attr/textColorSecondary</item>
        <item name="android:paddingBottom">@dimen/text_margin_body</item>
    </style>

    <style name="AppTheme.TextAppearance.FabText" parent="AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_body</item>
        <item name="android:textColor">?attr/textColorTertiary</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingRight">@dimen/fab_text_padding</item>
        <item name="android:paddingLeft">@dimen/fab_text_padding</item>
    </style>

    <style name="AppTheme.TextAppearance.ChangeLogRow" parent="AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_changelog_row</item>
        <item name="android:textColor">?attr/textColorSecondary</item>
    </style>

    <style name="AppTheme.TextAppearance.ChangeLogHeader" parent="AppTheme.TextAppearance">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_size_changelog_header</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/list_section_divider_accent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/keyline</item>
    </style>

    <style name="AppTheme.TextAppearance.Button" parent="AppTheme.TextAppearance">
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:textColor">@color/colorAccentDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
